<script type="text/javascript">
    // client configuration
    google_ad_client = 'ca-pub-8026931107919042';
    google_ad_slot = '';
    google_alternate_ad_url = 'http://www.wix.com/alternate/page/when/the/ad/cannot/be/displayed';

    google_page_url = 'http://wix.com/';

    // --------- square, with images
    {% if adUnit.size == 'SIZE_300_250' %}
    // width and height
    google_ad_width = {{ mobile.regular.width }};
    google_ad_height = {{ mobile.regular.height }};
    google_ad_format = '{{ mobile.regular.width }}x{{ mobile.regular.height }}_as';

    // type of ad
    {% if adUnit.type != 'IMAGE' %}
    google_ad_type = 'text';
    {% else %}
    google_ad_type = 'image';
    {% endif %}

    // ----------- wide, no image
    {#{% elseif adUnit.size == 'SIZE_468_60' %}#}

    {#// width and height#}
    {#google_ad_width = {{ mobile.large.width }};#}
    {#google_ad_height = {{ mobile.large.height }};#}
    {#google_ad_format = '{{ mobile.large.width }}x{{ mobile.large.height }}_as';#}

    {#google_ad_type = 'text_image';#}

    {#// ----------- tall#}
    {#{% elseif adUnit.size == 'SIZE_120_600' %}#}
    {#// width and height#}
    {#google_ad_width = {{ mobile.tall.width }};#}
    {#google_ad_height = {{ mobile.tall.height }};#}
    {#google_ad_format = '{{ mobile.tall.width }}x{{ mobile.tall.height }}_as';#}

    {#google_ad_type = 'text_image';#}

    {#// -------------- other sizes#}
    {#{% else %}#}
    // width and height
    google_ad_width = {{ mobile.regular.width }};
    google_ad_height = {{ mobile.regular.height }};
    google_ad_format = '{{ mobile.regular.width }}x{{ mobile.regular.height }}_as';

    // type of ad
    {% if adUnit.type != 'IMAGE' %}
    google_ad_type = 'text';
    {% else %}
    google_ad_type = 'image';
    {% endif %}

    {% endif %}

    // font style
    google_font_face = '{{ adUnit.fontFamily }}';
    google_font_size = 'medium';

    // colors
    google_color_border = '{{ adUnit.borderColor }}';
    google_color_bg = '{{ adUnit.backgroundColor }}';
    google_color_link = '{{ adUnit.titleColor }}';
    google_color_url = '{{ adUnit.urlColor }}';
    google_color_text = '{{ adUnit.textColor }}';

    // corners
    {% if adUnit.cornerStyle == 'SQUARE' %}
    google_ui_features = 'rc:4';
    {% elseif adUnit.cornerStyle == 'SLIGHTLY_ROUNDED' %}
    google_ui_features = 'rc:6';
    {% elseif adUnit.cornerStyle == 'VERY_ROUNDED' %}
    google_ui_features = 'rc:10';
    {% endif %}
</script>
<script type="text/javascript" src="http://pagead2.googlesyndication.com/pagead/show_ads.js"></script>
