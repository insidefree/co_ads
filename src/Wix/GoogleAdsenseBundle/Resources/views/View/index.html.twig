<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="robots" content="noindex, nofollow">
    <meta>

    <style>
        .overlay {
            z-index: 1;
            position: relative;
            width: 80%;
            height: 315px;
            background: #f5f5f5;
            margin: 0 auto;
            text-align: center;
        }

        .overlay-container {
            padding: 13px;
            position: relative;
        }

        .overlay-container span {
            position: absolute;
            right: 12px;
            top: 12px;
        }

        .icon-exclamation {
            margin-top: 1em;
        }

        .overlay-message {
            margin-top: 3.5em;
        }

        .overlay-message p {
            font: 17px/20px 'HelveticaNeueW01-55Roma', Helvetica, Arial, sans-serif;
            color: #666;
        }

        @media (max-width: 600px) {
            .overlay-container img {
                width: 80%;
                height: 80%;
            }

            .overlay-message p {
                font-size: 14px;
                line-height: 17px;
            }
        }
    </style>

    <title>Google AdSense Widget</title>
</head>
<body>

    <!-- adsense advertisement -->
    <div style="text-align: center" id="adblock">
        {% if code is defined and app.request.get('viewMode') != 'editor' %}
            {% include 'WixGoogleAdsenseBundle:View:ad.html.twig' %}
        {% else %}
            {% include 'WixGoogleAdsenseBundle:View:demo.html.twig' %}
        {% endif %}
    </div>
    <div class="overlay" id="adblock-overlay" style="display: none;">
        <div class="overlay-container">
            <div class="icon-exclamation">
                <img src="{{ asset('bundles/wixgoogleadsense/images/settings/exclamationmark.png') }}">
            </div>
            <div class="overlay-message">
                <p>It seems that you are blocking ads on your browser.<br>

                   Please turn off your ad blocker to display the content.</p>
            </div>
        </div>
    </div>

    <!-- wix sdk -->
    <script type="text/javascript" src="https://sslstatic.wix.com/services/js-sdk/1.24.0/js/Wix.js"></script>
    <script src="//code.jquery.com/jquery-1.10.1.min.js"></script>

    {% if code is not defined %}
        <!-- fos js routing bundle -->
        <script type="text/javascript" src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
        <script type="text/javascript" src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>

        <!-- scripts -->
        {% javascripts
        '@WixGoogleAdsenseBundle/Resources/public/lib/jquery/jquery.js'
        '@WixGoogleAdsenseBundle/Resources/public/js/responsive.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}

        <script type="text/javascript">
            function blockAdblockUser() {
                if ($('#adblock').height() == 0) {
                    $('#adblock-overlay').show();
                }
            }

            $(document).ready(function() {
                blockAdblockUser();
            });
        </script>
    {% endif %}
</body>
</html>
