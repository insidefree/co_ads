<style type="text/css">


    .container {
        background: #{{ adUnit.backgroundColor }};
        width: {{ adUnit.width }}px;
        height: {{ adUnit.height }}px;
        margin: 0 auto;
    }

    .title_container {
        margin-top: 8px;
    {% if (adUnit.width == 468 or adUnit.width == 120) %}
        text-align: left;
        margin-left: 8px
    {% elseif adUnit.width == 300 %}
    text-align: center;
    {% endif %}
    }

    .description_container {
    {% if adUnit.width == 300 %}
        text-align: center;
    {% elseif adUnit.width == 468 %}
        text-align: left;
        margin-left: 8px;
        margin-top:0;
        margin-bottom:0;
    {% elseif adUnit.width == 120 %}
        text-align: left;
        margin-left: 8px;
        margin-top:25px;
        margin-bottom:25px;
    {% endif %}
    }

    .description {
        color: #{{ adUnit.textColor }};
        font-family: {{ adUnit.fontFamily }}, arial, sans-serif;
        margin-top: 8px;
        margin-bottom: 8px;
        font-size: 14px;
    {% if adUnit.width == 300 %}
        font-size: 22px;
        max-width:270px;
        text-align: center;
        margin-left: auto;
        margin-right: auto;
        margin-bottom: 0;
    {% elseif adUnit.width == 120 %}
        font-size: 18px;
    {% elseif adUnit.width == 468 %}
        font-size: 12px;
        max-width: 300px;
        margin-top: 0;
    {% endif %}

    }

    .image_placeholder img {
        width: {{ adUnit.width }}px;
        height: {{ adUnit.height }}px;
    }

    body {
        background: transparent;
    }

    .text_placeholder {
        background: url('/bundles/wixgoogleadsense/images/widget/bg_diag_stripe_trans05.png');
        border: 1px solid #{{adUnit.borderColor}};
        width:100%;
        height:100%;
    }

    .title {
        {% if adUnit.width == 300 %}
        font-size: 35px;
        {% elseif adUnit.width == 120 %}
        font-size: 23px;
        text-align: left;
        margin-top: 8px;
        margin-left: 0;
        {% endif %}
        color: #{{ adUnit.titleColor }};
        font-family: {{ adUnit.fontFamily }}, arial, sans-serif;
    }

    .bullets_container {
        width: 30px;
        margin: 0 auto;

        {% if adUnit.width == 468 %}
            display: none;
        {% endif %}
    }

    .bullets_container .bullet {
        width: 8px;
        height: 8px;
        border: 1px solid #808080;
        display: inline-block;
        border-radius: 50%;
    }

    .bullets_container .bullet:first-child {
        background: #808080;
    }

    .button_container {

        text-align: center;
        margin: 0 auto;

        {% if adUnit.width == 300 %}
            width: 120px;
            margin: -6px auto 0;
        {% elseif adUnit.width == 120 %}
            width: 120px;
            margin-top: 20px;
        {% else %}
            display: inline-block;
            width: 120px;
            height:20px;
            float: right;
            margin-top: -40px
        {% endif %}

    }

    .button_container button {
        border: none;
        border-radius: 10px;
        background: #{{ adUnit.urlColor }};
        font-size: 27px;
        {% if adUnit.width == 300 %}
        width:117px;
        height:45px;
        margin-top: 10px;
        {% elseif adUnit.width == 468 %}
        width: 69px;
        height: 30px;
        border: none;
        border-radius: 10px;
        background: #0088CB;
        font-size: 23px;
        {% else %}
        width:90px;
        height:52px;
        {% endif %}
    }

    .button_container button span {
        color: #{{ adUnit.titleColor }};
    }

    .mobile .container{
        background: #{{ adUnit.backgroundColor }};
        {% if adUnit.width == 300 %}
            width:280px !important;
            height:233px !important;
        {% elseif adUnit.width == 468 %}
            width: 280px !important;
            height: 35px !important;
        {% else %}
            width:60px !important;
            height:300px !important;
        {% endif %}
        margin: 0 auto;
    }

    .mobile .title_container {
        margin: 8px 4px;
        text-align: left;
        {% if adUnit.width == 468 %}
            margin: 0 4px;
            line-height: 10px;
        {% elseif adUnit.width == 300 %}
            text-align: center;
            margin: 11px 4px;
        {% endif %}
        
    }

    .mobile .title{
        {% if adUnit.width == 300 %}
            font-size: 24px;
        {% elseif adUnit.width == 468 %}
            font-size: 9px;
        {% else %}
            font-size: 12px;
        {% endif %}
    }

    .mobile .description_container {
        text-align: left;
        margin: 0 4px;
    }

    .mobile .description {
        color: #{{ adUnit.textColor }};
        font-family: {{ adUnit.fontFamily }}, arial, sans-serif;
        margin-top: 8px;
        margin-bottom: 8px;
        text-align: left;
        {% if adUnit.width == 300 %}
            margin-bottom: 6px;
            font-size: 22px;
            text-align: center;
        {% elseif adUnit.width == 468 %}
            margin: 0;
            font-size: 9px;
            line-height: 10px;
        {% else %}
            font-size: 11px;
        {% endif %}
    }

    .mobile .image_placeholder img {
        width: 100% !important;
        height: 100% !important;
    }

    .mobile .button_container {
        text-align: center;
        margin: 0 auto;
        width: 140px;
        margin-top: 0px;
        position: static;
        bottom: auto;
        left: 0px;
        right: 25px;
        top: 25px;
        height: 20px;
        display: inline-block;
        {% if adUnit.width == 300 %}
            margin-top: -6px;
        {% elseif adUnit.width == 468 %}
            margin-top: 1px;
            right: 0;
            top: 0;
            height: 10px;
        {% else %}
            width: 40px;
        {% endif %}
    }

    .mobile .bullets_container {
        width: 30px;
        margin: 0 auto;
        display: block;
        {% if adUnit.width == 468 %}
            width: 15px;
            height: 0px;
            margin-top: -7px;
        {% endif %}
    }

    .mobile .bullets_container .bullet {
        {% if adUnit.width == 468 %}
            width: 3px;
            height: 3px;
        {% endif %}
    }

    .mobile .button_container button {
        border: none;
        border-radius: 10px;
        background: #{{ adUnit.urlColor }};
        margin-top: 0px;
        {% if adUnit.width == 300 %}
            width:85px;
            height:36px;
            font-size: 21px;
            margin-top: 10px;
        {% elseif adUnit.width == 468 %}
            font-size: 8px;
            width: 40px;
            height: 10px;
        {% else %}
            width:40px;
            height:26px;
            font-size: 17px;
        {% endif %}
    }

    {#{{ adUnit.urlColor }}#}
</style>
{% if adUnit.type == "TEXT" or adUnit.type == "TEXT_IMAGE" %}
    <div class="container">
        <div class="text_placeholder">
            <div class="title_container">
                <span class="title">
                    Ad title text will be displayed here
                </span>
            </div>
            <div class="description_container">
                <p class="description">
                    Ad description will be displayed here, just above the button.
                </p>
            </div>
            <div class="bullets_container">
                <span class="bullet"></span>
                <span class="bullet"></span>
            </div>
            <div class="button_container">
                <button>
                    <span>&#x2192;</span>
                </button>
            </div>
        </div>
    </div>
{% else %}
    <div class="image_placeholder">
        {% if adUnit.width == 300 %}
            <img src="/bundles/wixgoogleadsense/images/widget/WixAdsense-351x251.png"/>
        {% elseif adUnit.width == 120 %}
            <img src="/bundles/wixgoogleadsense/images/widget/WixAdsense-Tall120x600.png"/>
        {% else %}
            <img src="/bundles/wixgoogleadsense/images/widget/WixAdsenseWide468x60.png"/>
        {% endif %}
    </div>
{% endif %}