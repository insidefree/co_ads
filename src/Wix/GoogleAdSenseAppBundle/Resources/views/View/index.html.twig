<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="robots" content="noindex">
    <meta>
    <title>Google AdSense App</title>
</head>
<body>

<!-- adsense advertisement -->
<div class="drive_widget_main">
    <!-- adsense code -->
    {#{{ code|raw }}#}

    {% if adUnit is defined %}
    <!-- adsense customization -->
    <script type="text/javascript">
        google_ad_client = "ca-pub-5195028014239031";
//        google_ad_slot = '';

        google_ad_width = {{ width }};
        google_ad_height = {{ height }};

        google_ad_format = '{{ width }}x{{ height }}_as';

        google_alternate_ad_url = "http://www.wix.com/alternate/page/when/the/ad/cannot/be/displayed";

        google_ad_type = '{{ adUnit.contentAdsSettings.type | lower }}';

        google_font_face = '{{ adUnit.customStyle.font.family }}';
        google_font_size = '{{ adUnit.customStyle.font.size }}';

        google_color_border = '{{ adUnit.customStyle.colors.border }}';
        google_color_bg = '{{ adUnit.customStyle.colors.background }}';
        google_color_link = '{{ adUnit.customStyle.colors.url }}';
        google_color_url = '{{ adUnit.customStyle.colors.url }}';
        google_color_text = '{{ adUnit.customStyle.colors.text }}';
        google_ui_features = 'rc:{{ corners }}';
    </script>

    <script type="text/javascript"
            src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
    </script>
    {% endif %}

    {% if adUnit is not defined %}
        <div>
            Please connect  your account!
        </div>
    {% endif %}
</div>

</body>
</html>